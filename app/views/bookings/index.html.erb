<h1>Your bookings</h1>
<% if @bookings.empty? %>
  <p>You haven't booked any characters yet.</p>
  <%= link_to "Find one now", root_path %>
<% else %>
  <% @bookings.each do |booking| %>
  <h4>Character: <%= booking.character.name %></h4>
  <h4>From: <%= booking.date %> To: <%= booking.end_date %></h4>
  <% end %>
<% end %>
