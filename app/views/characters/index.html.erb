<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%);">
  <div class="banner-content">
    <h1>Rent a Fictional Character!</h1>
    <p>Having fun with Superheroes, Anime Characters or your favourite Gaming Character</p>
    <%= link_to "Add a character", new_character_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<br>


<div class="container">
<div >
  <%= form_tag characters_path, method: :get do %>
    <%= text_field_tag :search_by_name_and_genre,
      params[:search_by_name_and_genre],
      class: "form-control",
      placeholder: "Enter character name or genre"
    %>
</div>
</div>

<div>
<br>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
<br>
  <h1>Available characters</h1>
  <br>
<div class="cards">
<% if @characters.empty? %>
  <p>No characters found</p>
<% else %>
  <% @characters.each do |character| %>
    <div class="card-character">
      <%= cl_image_tag(character.photo.key) %>
      <div class="card-character-infos">
        <div>
          <h2><%= link_to character.name, character_path(character) %></h2>
          <p><%= character.genre %></p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
<% end %>
</div>
