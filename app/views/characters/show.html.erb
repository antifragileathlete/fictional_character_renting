<div class="container">

  <h1><%= @character.name %></h1>
  <%= link_to "Back to all fictional character overview", root_path %>
  <%= link_to "Choose a date", new_character_booking_path(@character) %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Character</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Name</th>
            <th>Genre</th>
            <!-- <th>Pic/th> -->
          </thead>
          <% @characters.each do |character| %>
            <tr>
              <td><%= character.name %></td>
              <td><%= character.genre %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>>
  </div>
